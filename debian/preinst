#!/bin/bash

divert_it() {
  dpkg-divert --quiet --package hs-runtime-rubygems1.9.1 --add --rename --divert $1-hs-runtime-rubygems1.9.1-original $1
}

case "$1" in
  install|upgrade|configure)
    for f in /usr/lib/ruby/1.9.1/rbconfig/datadir.rb /usr/lib/ruby/1.9.1/rubygems.rb /usr/lib/ruby/1.9.1/ubygems.rb /usr/lib/ruby/1.9.1/rubygems/commands/environment_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/dependency_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/setup_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/lock_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/cert_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/outdated_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/update_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/build_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/stale_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/cleanup_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/contents_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/search_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/list_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/which_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/server_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/uninstall_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/owner_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/query_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/specification_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/sources_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/help_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/push_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/generate_index_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/unpack_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/fetch_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/rdoc_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/install_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/pristine_command.rb /usr/lib/ruby/1.9.1/rubygems/commands/check_command.rb /usr/lib/ruby/1.9.1/rubygems/platform.rb /usr/lib/ruby/1.9.1/rubygems/validator.rb /usr/lib/ruby/1.9.1/rubygems/package/tar_header.rb /usr/lib/ruby/1.9.1/rubygems/package/tar_reader/entry.rb /usr/lib/ruby/1.9.1/rubygems/package/tar_reader.rb /usr/lib/ruby/1.9.1/rubygems/package/tar_output.rb /usr/lib/ruby/1.9.1/rubygems/package/tar_input.rb /usr/lib/ruby/1.9.1/rubygems/package/tar_test_case.rb /usr/lib/ruby/1.9.1/rubygems/package/tar_writer.rb /usr/lib/ruby/1.9.1/rubygems/package/f_sync_dir.rb /usr/lib/ruby/1.9.1/rubygems/requirement.rb /usr/lib/ruby/1.9.1/rubygems/old_format.rb /usr/lib/ruby/1.9.1/rubygems/dependency.rb
    do divert_it $f
    done

    for f in /usr/lib/ruby/1.9.1/rubygems/require_paths_builder.rb /usr/lib/ruby/1.9.1/rubygems/source_index.rb /usr/lib/ruby/1.9.1/rubygems/package_task.rb /usr/lib/ruby/1.9.1/rubygems/custom_require.rb /usr/lib/ruby/1.9.1/rubygems/gemcutter_utilities.rb /usr/lib/ruby/1.9.1/rubygems/gem_openssl.rb /usr/lib/ruby/1.9.1/rubygems/config_file.rb /usr/lib/ruby/1.9.1/rubygems/doc_manager.rb /usr/lib/ruby/1.9.1/rubygems/remote_fetcher.rb /usr/lib/ruby/1.9.1/rubygems/specification.rb /usr/lib/ruby/1.9.1/rubygems/defaults.rb /usr/lib/ruby/1.9.1/rubygems/command_manager.rb /usr/lib/ruby/1.9.1/rubygems/ext/rake_builder.rb /usr/lib/ruby/1.9.1/rubygems/ext/builder.rb /usr/lib/ruby/1.9.1/rubygems/ext/ext_conf_builder.rb /usr/lib/ruby/1.9.1/rubygems/ext/configure_builder.rb /usr/lib/ruby/1.9.1/rubygems/version.rb /usr/lib/ruby/1.9.1/rubygems/dependency_installer.rb /usr/lib/ruby/1.9.1/rubygems/builder.rb /usr/lib/ruby/1.9.1/rubygems/deprecate.rb /usr/lib/ruby/1.9.1/rubygems/errors.rb /usr/lib/ruby/1.9.1/rubygems/server.rb /usr/lib/ruby/1.9.1/rubygems/installer.rb /usr/lib/ruby/1.9.1/rubygems/command.rb /usr/lib/ruby/1.9.1/rubygems/gem_runner.rb /usr/lib/ruby/1.9.1/rubygems/version_option.rb /usr/lib/ruby/1.9.1/rubygems/test_utilities.rb /usr/lib/ruby/1.9.1/rubygems/dependency_list.rb /usr/lib/ruby/1.9.1/rubygems/spec_fetcher.rb /usr/lib/ruby/1.9.1/rubygems/install_update_options.rb /usr/lib/ruby/1.9.1/rubygems/text.rb /usr/lib/ruby/1.9.1/rubygems/installer_test_case.rb /usr/lib/ruby/1.9.1/rubygems/format.rb /usr/lib/ruby/1.9.1/rubygems/local_remote_options.rb /usr/lib/ruby/1.9.1/rubygems/gem_path_searcher.rb /usr/lib/ruby/1.9.1/rubygems/test_case.rb /usr/lib/ruby/1.9.1/rubygems/user_interaction.rb /usr/lib/ruby/1.9.1/rubygems/security.rb /usr/lib/ruby/1.9.1/rubygems/uninstaller.rb /usr/lib/ruby/1.9.1/rubygems/exceptions.rb /usr/lib/ruby/1.9.1/rubygems/mock_gem_ui.rb /usr/lib/ruby/1.9.1/rubygems/ext.rb /usr/lib/ruby/1.9.1/rubygems/indexer.rb /usr/lib/ruby/1.9.1/rubygems/package.rb /usr/lib/ruby/1.9.1/gauntlet_rubygems.rb
    do divert_it $f
    done 

    divert_it /usr/bin/gem1.9.1
  ;;
esac

